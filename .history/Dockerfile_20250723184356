# Stage 1: dependencies
FROM node:20-alpine AS deps
WORKDIR /usr/src/app
COPY package*.json ./
RUN npm install --production

# Stage 2: app
FROM node:20-alpine
WORKDIR /usr/src/app
COPY --from=deps /usr/src/app/node_modules ./node_modules
COPY src ./src

WORKDIR /usr/src/app/src
# no EXPOSE needed—polling doesn’t open ports
CMD ["node", "bot.js"]
